<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width,initial-scale=1" />
    <title>Pharma Management</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body class="bg-gray-50 text-gray-800">
    <header class="bg-indigo-600 text-white">
      <div
        class="max-w-6xl mx-auto px-4 py-4 flex items-center justify-between"
      >
        <h1 class="text-xl font-semibold">Pharmaceutical Management System</h1>
        <nav class="space-x-4 text-sm">
           <% if (currentUser) { %>
          <a href="/medicines" class="hover:underline">Medicines</a>
          <a href="/suppliers" class="hover:underline">Suppliers</a>
          <a href="/orders" class="hover:underline">Orders</a>
          <a href="/perf/medicines-search" class="hover:underline">Performance Test</a>
          <a href="/expiring" class="hover:underline">Expiring</a>
          <span class="ml-4 text-sm">Hello, <%= currentUser.username %></span>
          <a href="/logout" class="ml-3 hover:underline">Logout</a>
          <% } else { %>
          <a href="/login" class="ml-3 hover:underline">Login</a>
          <a href="/signup" class="ml-3 hover:underline">SignUp</a>
          <% } %>
          <% if (typeof lowStockCount !== 'undefined' && lowStockCount > 0) { %>
          <% } %>
        </nav>
      </div>
    </header>
    <main class="max-w-6xl mx-auto px-4 py-8"></main>
  </body>
</html>
