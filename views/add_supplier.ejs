<%- include('partials/header') %>

<div class="max-w-lg mx-auto bg-white p-6 rounded shadow">
  <h2 class="text-xl font-semibold mb-4">Add Supplier</h2>
  <form method="post" action="/suppliers" class="space-y-4">
    <div>
      <label class="block text-sm font-medium text-gray-700">Name</label>
      <input name="name" required class="mt-1 block w-full rounded border-gray-300" />
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Contact</label>
      <input name="contact" class="mt-1 block w-full rounded border-gray-300" />
    </div>

    <div>
      <label class="block text-sm font-medium text-gray-700">Email</label>
      <input name="email" type="email" class="mt-1 block w-full rounded border-gray-300" />
    </div>

    <div>
      <button type="submit" class="bg-indigo-600 text-white px-4 py-2 rounded hover:bg-indigo-700">Add</button>
      <a href="/suppliers" class="ml-3 text-sm text-gray-600">Cancel</a>
    </div>
  </form>
</div>

<%- include('partials/footer') %>
